<h1>Listing convenios</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Fecha inicio</th>
    <th>Fecha fin</th>
    <th>Monto</th>
    <th>Moneda</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @convenios.each do |convenio| %>
  <tr>
    <td><%= convenio.nombre %></td>
    <td><%= convenio.descripcion %></td>
    <td><%= convenio.fecha_inicio %></td>
    <td><%= convenio.fecha_fin %></td>
    <td><%= convenio.monto %></td>
    <td><%= convenio.moneda %></td>
    <td><%= link_to 'Show', convenio %></td>
    <td><%= link_to 'Edit', edit_convenio_path(convenio) %></td>
    <td><%= link_to 'Destroy', convenio, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

